	});

	// Cerrar sidebar al hacer clic fuera en mÃ³viles
	document.addEventListener("click", (event) => {
		const isClickInsideSidebar = sidebar?.contains(event.target as Node);
		const isClickOnToggle = menuToggle?.contains(event.target as Node);

